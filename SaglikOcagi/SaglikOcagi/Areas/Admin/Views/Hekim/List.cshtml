@using SaglikOcagi.Entity
@model IEnumerable<tbl_Hekim>

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>Ad Soyad</th>
        <th>Unvan</th>
        <th>Hekim No</th> 
        <th>Foto</th> 
        <th>Düzenle</th>
    </tr>
    @foreach (tbl_Hekim item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(t => item.HekimAdSoyad)</td>
            <td>@Html.DisplayFor(t => item.Unvan)</td>
            <td>@Html.DisplayFor(t => item.HekimNo)</td>
            <td><img src="~/Images/@item.HekimFoto" class="pro-img-box" style="width:100px" height="100" /></td>         
            <td>
                <a href="~/Admin/Hekim/EditHekim/@item.HekimID" class="btn btn-success">Düzenle</a>
                <a href="~/Admin/Hekim/Delete/@item.HekimID" class="btn btn-danger">Sil</a>
            </td>
        </tr>
    }
</table>

